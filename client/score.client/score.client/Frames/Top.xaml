            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel Orientation="Horizontal" Background="Transparent" ><Button x:Name="btnSetting" Content="setting" Width="60" Click="btnSetting_Click" Margin="23,54,7,44" >
	<Button.Background>
