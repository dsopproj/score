<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="score.client.Top"
	d:DesignWidth="640" d:DesignHeight="120" Height="120">

    <Grid x:Name="LayoutRoot" Background="#FFECD3D3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <StackPanel Orientation="Horizontal">

                <Image Source="top_bar.png" ></Image>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="32" >Starbucks Site: welcome to starbucks!</TextBlock>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel Orientation="Horizontal" >
                <Button Name="btnSetting" Content="setting" Width="60" Click="btnSetting_Click" Margin="0,20" />
                <Button Name="btnLogout" Content="LogOut" Width="60" Click="btnLogout_Click" Margin="0,20" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>