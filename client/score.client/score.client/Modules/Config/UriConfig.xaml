<UserControl x:Class="score.client.Modules.Config.UriConfig"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="500" Width="400" Height="500">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="78*"/>
        </Grid.ColumnDefinitions>
    	<StackPanel Grid.ColumnSpan="2" Margin="0" Orientation="Vertical">
    		<StackPanel Orientation="Horizontal" Width="400" Height="35" Margin="0,8,0,0">
    			<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="21.333" Height="39" Width="123" Margin="0">
    				<Run Text="current url:"/>
    			</TextBlock>
    			<TextBox x:Name="txtUrl" Width="276" Height="30" HorizontalAlignment="Left" VerticalAlignment="Center"/>
    		</StackPanel>
    		<Button VerticalAlignment="Center" HorizontalAlignment="Right" Content="commit" Click="Button_Click" Margin="0,7,34,0" Height="22" Width="48" />
    	</StackPanel>
    </Grid>
</UserControl>
